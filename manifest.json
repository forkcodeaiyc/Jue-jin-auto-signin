{
    "name": "Jue jin自动签到",
    "version": "0.1.0",
    "version_name": "0.1.0",
    "description": "自动签到",
    // "options_page": "html/options.html",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Jue jin自动签到",
        "default_popup": "html/options.html"
    },
    // 注入页面的js
    "content_scripts": [
        {
            // "matches": ["https://*/*"],
            "matches": ["https://*.juejin.cn/*"],
            "js": ["js/insert.js"]
        }
    ],
    "icons": {},
    "permissions": [
        "tabs",
        "notifications",
        "https://*.juejin.cn/*",
        "storage"
    ],
    "incognito": "split",
    "manifest_version": 2
}